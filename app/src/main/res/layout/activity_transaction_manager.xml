<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".TransactionManager">


    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/primaryColor"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/calcDivision"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/square_income"
        android:text="\/"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/calcEqual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/calcEqual" />

    <Button
        android:id="@+id/calcMultiply"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/square_income"
        android:text="\*"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/calcDivision"
        app:layout_constraintEnd_toEndOf="@+id/calcDivision"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/calcDivision" />

    <Button
        android:id="@+id/calcMinus"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/square_income"
        android:text="\-"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/calcMultiply"
        app:layout_constraintEnd_toEndOf="@+id/calcDivision"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/calcDivision" />

    <Button
        android:id="@+id/calcPlus"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/square_income"
        android:text="\+"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/calcMinus"
        app:layout_constraintEnd_toEndOf="@+id/calcDivision"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/calcDivision" />

    <Button
        android:id="@+id/calcEqual"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/square_income"
        android:text="="
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/submitTransactionButton"
        app:layout_constraintEnd_toStartOf="@+id/calcDivision"
        app:layout_constraintStart_toEndOf="@+id/calc0" />

    <Button
        android:id="@+id/calc9"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/square_income"
        android:text="9"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/calcEqual"
        app:layout_constraintEnd_toEndOf="@+id/calcEqual"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/calcEqual" />

    <Button
        android:id="@+id/calc6"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/square_income"
        android:text="6"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/calc9"
        app:layout_constraintEnd_toEndOf="@+id/calcEqual"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/calcEqual" />

    <Button
        android:id="@+id/calc3"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/square_income"
        android:text="3"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/calc6"
        app:layout_constraintEnd_toEndOf="@+id/calcEqual"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/calcEqual" />

    <Button
        android:id="@+id/calc0"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/square_income"
        android:text="0"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/calcEqual"
        app:layout_constraintEnd_toStartOf="@+id/calcEqual"
        app:layout_constraintStart_toEndOf="@+id/calcDot" />

    <Button
        android:id="@+id/calc8"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/square_income"
        android:text="8"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/calc0"
        app:layout_constraintEnd_toEndOf="@+id/calc0"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/calc0" />

    <Button
        android:id="@+id/calc5"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/square_income"
        android:text="5"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/calc8"
        app:layout_constraintEnd_toEndOf="@+id/calc0"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/calc0" />

    <Button
        android:id="@+id/calc2"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/square_income"
        android:text="2"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/calc5"
        app:layout_constraintEnd_toEndOf="@+id/calc0"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/calc0" />

    <Button
        android:id="@+id/calcDot"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/square_income"
        android:text="."
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/calc0"
        app:layout_constraintEnd_toStartOf="@+id/calc0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/calc7"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/square_income"
        android:text="7"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/calcDot"
        app:layout_constraintEnd_toEndOf="@+id/calcDot"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/calcDot" />

    <Button
        android:id="@+id/calc4"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/square_income"
        android:text="4"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/calc7"
        app:layout_constraintEnd_toEndOf="@+id/calcDot"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/calcDot" />

    <Button
        android:id="@+id/calc1"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/square_income"
        android:text="1"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/calc4"
        app:layout_constraintEnd_toEndOf="@+id/calcDot"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/calcDot" />

    <EditText
        android:id="@+id/editTextNote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:hint="Notatka"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_light"
        android:textColorHighlight="@color/primaryColor"
        android:textColorHint="@android:color/background_light"
        android:textColorLink="@color/primaryColor"
        app:layout_constraintBottom_toTopOf="@+id/calc2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvKwota" />

    <TextView
        android:id="@+id/tvKwota"
        android:layout_width="0dp"
        android:layout_height="60sp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/primaryColor"
        android:gravity="center"
        android:text="Wpisz kwotę"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextNote"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateTextView" />

    <Button

        android:id="@+id/submitTransactionButton"
        android:text="Zatwierdź"
        android:textColor="@android:color/background_light"
        android:textSize="20dp"
        android:background="@color/primaryColor"

        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/categoriesList"
        app:layout_constraintEnd_toEndOf="@+id/calc0"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/categoriesList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:dropDownWidth="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageView
        android:id="@+id/calcDelete"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/square_income"
        android:src="@drawable/ic_backspace_black_24dp"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/calcDivision"
        app:layout_constraintStart_toStartOf="@+id/calcDivision" />

    <Button
        android:id="@+id/calcClear"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/square_income"
        android:text="C"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/calcEqual"
        app:layout_constraintStart_toStartOf="@+id/calcEqual" />

    <Button

        android:id="@+id/categoryButton"
        android:background="@drawable/square_income"
        android:text="Wybierz kategorię"
        android:textColor="@android:color/background_light"

        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toTopOf="@+id/calc2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNote" />

</androidx.constraintlayout.widget.ConstraintLayout>